@using Model.Onderwijsdelen
@model Taak

@{
    ViewBag.Title = "Taak Toevoegen";
    Layout = "_Layout";
}

<h2>Taak Toevoegen</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TaakToevoegen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaakId" class="control-label"></label>
                <input asp-for="TaakId" class="form-control" />
                <span asp-validation-for="TaakId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaakNaam" class="control-label"></label>
                <input asp-for="TaakNaam" class="form-control" />
                <span asp-validation-for="TaakNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taak_info" class="control-label"></label>
                <input asp-for="Taak_info" class="form-control" />
                <span asp-validation-for="Taak_info" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>