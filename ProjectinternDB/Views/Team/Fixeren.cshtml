@using Model.Onderwijsdelen
@model Tuple<IEnumerable<Taak>, int>

@{
    ViewData["Title"] = "Fixeren";
}

<h2>Fixeren</h2>
<div>
    <form asp-controller="Team" asp-action="Fixeren" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <label class="control-label">Taak</label>
                    <select class="form-control" id="TaakId" name="TaakId" style="border-radius: 15px; background-color: darkgrey; color: white;">
                        @foreach (var taak in Model.Item1)
                        {
                            <option value="@taak.TaakId">@taak.TaakNaam</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Taak fixeren" class="btn btn-outline-primary" asp-route-id="@Model.Item2" asp-controller="Team" asp-action="TaakFixeren" />
                </div>
            </div>
        </div>
        <div class="form-group">
            @*<a asp-action="FixerenOverzicht">Fixeer Overzicht</a>*@
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}