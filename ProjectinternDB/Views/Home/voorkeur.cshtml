@model ProjectinternDB.Models.VoorkeurViewModel

@{
    ViewData["Title"] = "Voorkeur";
}
<h2>Voorkeur</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Vak_naam" class="control-label"></label>
                <input asp-for="Vak_naam" class="form-control" />
                <span asp-validation-for="Vak_naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prioriteit" class="control-label"></label>
                <input asp-for="Prioriteit" class="form-control" />
                <span asp-validation-for="Prioriteit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" asp-controller="Voorkeur" asp-action="InvoegenVoorkeur" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}