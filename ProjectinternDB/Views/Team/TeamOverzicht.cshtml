    </div>

    <div class="col-xs-6 col-sm-3">
        <h6>Teamleider ID</h6>
    </div>

    <div class="col-xs-6 col-sm-3">
        <h6>Teamleider naam</h6>
    </div>
    <div class="col-xs-6 col-sm-3">
        <h6> </h6>
    </div>
    @foreach (Team team in Model)
    {
        <div class="col-xs-6 col-sm-3">
            @team.Id
        </div>

        <div class="col-xs-6 col-sm-3">
            @team.TeamleiderID
        </div>

        <div class="col-xs-6 col-sm-3">
            @teamLogic.TeamleiderNaamMetTeamleiderId(team.TeamleiderID)
        </div>
