@model VoorkeurViewModel

@{
    ViewData["Title"] = "Voorkeur";
}
<h2>Voorkeur</h2>
<hr />

<script src="~/lib/jquery/dist/jquery.js"></script>



<form asp-controller="Voorkeur" asp-action="InvoegenVoorkeur" method="post" class="form-horizontal" role="form">


    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <div class="form-group">
                <label asp-for="Prioriteit" class="control-label"></label>
                <select class="form-control" asp-for="Prioriteit">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
                <span asp-validation-for="Prioriteit" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Prioriteit geven" class="btn btn-primary" asp-controller="Voorkeur" asp-action="InvoegenVoorkeurDocent" asp-route-id="@Model.BekwaamheidId" />
            </div>
        </div>
    </div>
</form>

<div class="row col-md-auto">
    <p id="Info"></p>
</div>

<div class="col-md-12">
    <div class="alert alert-info alert-primary text-center">
        <strong>Je hebt nog:</strong> <a class="alert-link">600</a> uur.
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}