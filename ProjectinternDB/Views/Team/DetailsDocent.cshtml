@model Model.Docent

@{
    ViewData["Title"] = "Details";
    // todo: Opmaak aanpassen
}

<h2>Details</h2>

<div>
    <h4>Docent: @Model.Naam</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DocentId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DocentId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TeamId)
        </dt>
        @if (Model.TeamId == 0)
        {
            <dd>Deze Persoon zit nog niet in een team</dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.TeamId)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.RuimteVoorInzet)
        </dt>
        @if (Model.RuimteVoorInzet <= 0)
        {
            <dd>Deze persoon heeft geen ruimte voor inzet.</dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.RuimteVoorInzet)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        @if (@Model.Email == null)
        {
            <dd>Er is nog geen email adres bekend.</dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="DocentenInTeam">Terug naar uw Team</a>
</div>
