@using Model.Onderwijsdelen
@model Tuple<IEnumerable<Eenheid>, EenheidViewModel>
@{
    ViewData["Title"] = "OverzichtEenheden";
}

<h2>Eenheden</h2>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Eenheid</th>
            <th>Traject</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EenheidId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EenheidNaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrajectNaam)
                </td>
                <td>
                @using (Html.BeginForm("WijzigEenheid", "Curriculumeigenaar", new { id = item.EenheidId, eenheidNaam = item.EenheidNaam, trajectNaam = item.TrajectNaam, ECTS = Model.Item2.ECTS, AantalKlassen = Model.Item2.AantalKlassen}, FormMethod.Post))
                {
                    @Html.DisplayFor(model => model.Item2.ECTS)
                    @Html.TextBoxFor(model => model.Item2.ECTS)
                    @Html.ValidationMessageFor(model => model.Item2.ECTS)
                    @Html.DisplayFor(model => model.Item2.AantalKlassen)
                    @Html.TextBoxFor(model => model.Item2.AantalKlassen)
                    @Html.ValidationMessageFor(model => model.Item2.AantalKlassen)
                    <button type="submit">Test</button>
                }
                </td>
                <td>
                    <input type="number" asp-route-ECTS="@Model.Item2.ECTS"/>       
                </td>
                <td>
                    <input type="number" asp-route-AantalKlassen="@Model.Item2.AantalKlassen"  />
                </td>
                @*<td>
                    @Html.ActionLink("ECTS toewijzen", "WijzigEenheid", "CurriculumEigenaar", new { id = item.EenheidId, eenheidNaam = item.EenheidNaam, trajectNaam = item.TrajectNaam, ECTS = Model.Item2.ECTS, AantalKlassen = Model.Item2.AantalKlassen}, new { onclick = "return confirm('Weet u zeker dat u deze eenheid wilt aanpassen?');", @class = "delete-button" })
                </td>*@
            </tr>
        }
    </tbody>
</table>

