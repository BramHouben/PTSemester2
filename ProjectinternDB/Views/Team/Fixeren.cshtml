@using Model
@model IEnumerable<Onderwijstaak>

@{
    ViewData["Title"] = "Fixeren";
}

<h2>Fixeren</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Fixeren">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select>
                    @foreach (var taken in Model)
                    {
                    <option>@Html.DisplayFor(modelItem => taken.Omschrijving)</option>
                    }
                </select>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
