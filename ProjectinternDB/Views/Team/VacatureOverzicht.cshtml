@model IEnumerable<Model.Vacature>

@{
    ViewData["Title"] = "VacatureOverzicht";
}

<h2>VacatureOverzicht</h2>

<p>
    <a asp-action="MaakVacature">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VactureID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnderwijstaakID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VactureID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnderwijstaakID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.VactureID  }) |
                @Html.ActionLink("Details", "VacatureDetails", new { id=item.VactureID }) |
                @Html.ActionLink("Delete", "DeleteVacature", new { id=item.VactureID  },new { onclick = "return confirm('Weet u zeker dat u deze vacature wilt verwijderen');", @class = "delete-button" })
            </td>
        </tr>
}
    </tbody>
</table>