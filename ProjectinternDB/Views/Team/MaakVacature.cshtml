@using Model.Onderwijsdelen
@model Model.Vacature

@{
    ViewData["Title"] = "MaakVacature";
}


<h2>MaakVacature</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MaakVacature">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <label class="control-label">Taak</label>
                    <select class="form-control" id="TaakID" name="TaakID"
                            asp-items="@(new SelectList(ViewBag.Taken,"TaakId", "TaakNaam"))"></select>
                </div>
            </div>
           @* <div class="form-group">
                <label asp-for="TaakID" class="control-label"></label>
                <input asp-for="TaakID" class="form-control" />
                <span asp-validation-for="TaakID" class="text-danger"></span>
            </div>*@
            <div class="form-group">

                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Maak vacature aan" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VacatureOverzicht">Terug naar Vacatures</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
